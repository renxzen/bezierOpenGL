    "version": "0.2.0",
    "configurations": [
        {
            "name": "c++ Launch",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceRoot}/builds/main",
            "args": [],
            "preLaunchTask": "Build",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}/source",
            "environment": [],
            "externalConsole": false,
            "MIMode": "gdb",
            "windows": {
                "program": "${workspaceRoot}/builds/main",
                "miDebuggerPath": "C:/mingw64/bin/gdb.exe"
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for gdb",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        }
    ]
}